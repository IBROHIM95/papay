<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/menu.css">

<body>
  <div id="main_container" >
    <div class="group_name" >
      <ul class="nav ">
  <li class="nav-item" style="cursor: pointer;" >
    <a class="nav-link active" aria-current="page" href="/resto">Home</a>
  </li>
      <li class="nav-item" style="cursor: pointer;" >
          <a class="nav-link active" aria-current="page" href="/resto/products/menu">MyResto</a>
        </li>
        <li class="nav-item" style="cursor: pointer;" >
          <a class="nav-link active" aria-current="page" href="/resto/logout">LogOut</a>
        </li>
 </ul>        
    </div>
    <div class="restaurant_menu_frame" >  
      <div class="restaurant_container" >
        <div class="dishs_table" >
          <span class="new_dish_text" >
            <%= member.mb_nick.toUpperCase() %> Taomlar menusi
          </span>
          <table class="table table bordered table-hover">
            <thead class="thead-light" >
              <th scope="col" >T/r</th>
              <th scope="col" >Taom nomi</th>
              <th scope="col" >Taom turi</th>
              <th scope="col" >Taom hajmi</th>
              <th scope="col" >Taom narxi</th>
              <th scope="col" >Taom qoldiq miqdori</th>
              <th scope="col" >Taom holati</th>
            </thead>
            <% restaurant_data.map((value,key) => {%>
              <tbody style="background: white;" >
              <td><%= key + 1 %></td>
              <td><%= value.product_name %></td>
              <td><%= value.product_collection %></td>
              <td><%= value.product_collection === 'drink'
               ?  value.product_volume : value.product_size  %></td>
              <td><%= value.product_price  %></td>
              <td><%= value.product_left_cnt %></td>
              <td>
                <select class="spec-select" id="<%= value._id %>">
                  <option value="PAUSED"  <%= value.product_status === 'PAUSED' ? 'selected' : '' %> >PAUSED</option> 
                  <option value="PROCCESS"  <%= value.product_status === 'PROCCESS' ? 'selected' : '' %> >PROCCESS</option>
                </select>
              </td>
            </tbody>
            <%}); %> 
           
          </table>
        </div>
        <form ></form>

      </div>
    </div>
  </div>
  
</body>

<%- include('includes/footer') %>